<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="localisation.remote.onmap.co.il.remotelocalisation.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Activity.Second.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/some_default_text_for_second" />

        <Button
            android:id="@+id/Activity.Second.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_second_button_text" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
